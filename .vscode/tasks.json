{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build TypeScript",
        "type": "typescript",
        "tsconfig": "tsconfig.json",
        "problemMatcher": {
          "owner": "typescript",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.+\\.ts)$",
            "file": 1
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\s*\\[.+\\] Starting compilation in watch mode\\.\\.\\.$",
            "endsPattern": "^\\s*\\[.+\\] Found \\d+ errors?\\. Watching for file changes\\.$"
          }
        },
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  